@{
    ViewData["Title"] = "Reset Password";
}
<h2>Reset Password</h2>
<p>Enter the reset code sent to you. For demo, your code is: <strong>@ViewBag.Code</strong></p>
<form method="post" asp-action="ResetPassword" asp-controller="Authentication">
    <input type="hidden" name="id" value="@ViewBag.AccountId" />
    <div class="mb-3">
        <label class="form-label">Reset Code</label>
        <input class="form-control" type="text" name="code" />
    </div>
    <div class="mb-3">
        <label class="form-label">New Password</label>
        <input class="form-control" type="password" name="newPassword" />
    </div>
    <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <input class="form-control" type="password" name="confirmPassword" />
    </div>
    <div class="text-danger">@ViewBag.Error</div>
    <button class="btn btn-primary" type="submit">Reset Password</button>
    <a class="btn btn-link" asp-action="Login" asp-controller="Authentication">Back to Login</a>
</form>


