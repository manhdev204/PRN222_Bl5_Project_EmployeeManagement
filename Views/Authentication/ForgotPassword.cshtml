@{
    ViewData["Title"] = "Forgot Password";
}
<h2>Forgot Password</h2>
<form method="post" asp-action="ForgotPassword" asp-controller="Authentication">
    <div class="mb-3">
        <label class="form-label">Username or Email</label>
        <input class="form-control" type="text" name="usernameOrEmail" />
    </div>
    <div class="text-danger">@ViewBag.Error</div>
    <button class="btn btn-primary" type="submit">Send Reset Code</button>
    <a class="btn btn-link" asp-action="Login" asp-controller="Authentication">Back to Login</a>
    </form>


