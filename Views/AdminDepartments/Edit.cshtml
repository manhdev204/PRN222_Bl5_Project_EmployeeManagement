@model PRN222_BL5_Project_EmployeeManagement.Models.Department
@{
    ViewData["Title"] = "Edit Department";
}
<h2>Edit Department</h2>
<form method="post" asp-action="Edit" asp-controller="AdminDepartments">
    <input type="hidden" name="id" value="@Model.DepartmentId" />
    <div class="mb-3">
        <label class="form-label">Department Name</label>
        <input class="form-control" name="departmentName" value="@Model.DepartmentName" />
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" name="deleteFlag" @(Model.DeleteFlag == true ? "checked" : "") />
        <label class="form-check-label">Delete Flag</label>
    </div>
    <div class="text-danger">@ViewBag.Error</div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="AdminDepartments">Back</a>
</form>


