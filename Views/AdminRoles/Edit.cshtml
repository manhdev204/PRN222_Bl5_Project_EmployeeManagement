@model PRN222_BL5_Project_EmployeeManagement.Models.Role
@{
    ViewData["Title"] = "Edit Role";
}
<h2>Edit Role</h2>
<form method="post" asp-action="Edit" asp-controller="AdminRoles">
    <input type="hidden" name="id" value="@Model.RoleId" />
    <div class="mb-3">
        <label class="form-label">Role Name</label>
        <input class="form-control" name="roleName" value="@Model.RoleName" />
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" name="deleteFlag" @(Model.DeleteFlag == true ? "checked" : "") />
        <label class="form-check-label">Delete Flag</label>
    </div>
    <div class="text-danger">@ViewBag.Error</div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="AdminRoles">Back</a>
</form>


