@model PRN222_BL5_Project_EmployeeManagement.Models.Role
@{
    ViewData["Title"] = "Create Role";
}
<h2>Create Role</h2>
<form method="post" asp-action="Create" asp-controller="AdminRoles">
    <div class="mb-3">
        <label class="form-label">Role Name</label>
        <input class="form-control" asp-for="RoleName" />
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" name="DeleteFlag" value="true" @(Model?.DeleteFlag == true ? "checked" : "") />
        <label class="form-check-label">Delete Flag</label>
    </div>
    <div class="text-danger">@ViewBag.Error</div>
    <button class="btn btn-primary" type="submit">Create</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="AdminRoles">Back</a>
</form>


