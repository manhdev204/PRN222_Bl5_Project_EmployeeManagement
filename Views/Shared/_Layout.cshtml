@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var isLoggedIn = HttpContextAccessor.HttpContext?.Session?.GetInt32("AUTH_USER_ID").HasValue == true;
    var roleStr = HttpContextAccessor.HttpContext?.Session?.GetString("AUTH_ROLE");
    int.TryParse(roleStr, out var roleId);
    var isManager = roleId == 2 || roleId == 3;
    var isEmployee = roleId == 1;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRN222_BL5_Project_EmployeeManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN222_BL5_Project_EmployeeManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        .navbar-gradient{background:linear-gradient(90deg,#0d6efd 0%,#6610f2 100%);}
        .navbar-glass{backdrop-filter:saturate(180%) blur(10px);}
        .navbar-brand{font-weight:700;letter-spacing:.3px}
        .nav-link{color:#f8f9fa!important;opacity:.9}
        .nav-link:hover,.nav-link.active{opacity:1}
        .btn-outline-light-soft{--bs-btn-color:#f8f9fa;--bs-btn-border-color:rgba(255,255,255,.35);--bs-btn-hover-bg:rgba(255,255,255,.12);--bs-btn-hover-border-color:rgba(255,255,255,.6)}
        .avatar{width:34px;height:34px;border-radius:50%;display:inline-flex;align-items:center;justify-content:center;background:rgba(255,255,255,.18);color:#fff;font-weight:600}
        .badge-role{background:rgba(255,255,255,.18);color:#fff}
        .dropdown-menu{border-radius:12px;border:0;box-shadow:0 10px 30px rgba(0,0,0,.12)}
        .box-shadow-xl{box-shadow:0 .25rem 1.25rem rgba(0,0,0,.15)!important}
        .footer-min{font-size:.95rem}
    </style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient navbar-glass box-shadow-xl">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-people-fill me-2"></i>Employee Management
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isLoggedIn && isManager)
                        {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ManagerHome"?"active":"")" asp-controller="ManagerHome" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-1"></i>Home
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ManagerAttendance"?"active":"")" asp-controller="ManagerAttendance" asp-action="Today">
                                        <i class="bi bi-calendar-check me-1"></i>Team Attendance
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="LeaveRequest"?"active":"")" asp-controller="LeaveRequest" asp-action="ApproveList" asp-route-status="1">
                                        <i class="bi bi-inbox-check me-1"></i>Leave Requests
                                    </a>
                                </li>
                        }
                        else if (isLoggedIn && isEmployee)
                        {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Attendance"?"active":"")" asp-controller="Attendance" asp-action="Index">
                                        <i class="bi bi-clock-history me-1"></i>Attendance Today
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="LeaveRequest" && ViewContext.RouteData.Values["action"]?.ToString()=="Create"?"active":"")" asp-controller="LeaveRequest" asp-action="Create">
                                        <i class="bi bi-send-plus me-1"></i>New Leave Request
                                    </a>
                                </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (!isLoggedIn)
                        {
                                <li class="nav-item me-2">
                                    <a class="btn btn-outline-light-soft px-3" asp-controller="Authentication" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-light text-primary px-3" asp-controller="Authentication" asp-action="Register">
                                        <i class="bi bi-person-plus me-1"></i>Register
                                    </a>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span class="avatar me-2"><i class="bi bi-person"></i></span>
                                        <span class="d-none d-lg-inline">Account</span>
                                        <span class="badge badge-role ms-2">@((isManager ? "Manager/Admin" : "Employee"))</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Authentication" asp-action="ChangePassword">
                                                <i class="bi bi-key me-2"></i>Change Password
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="post" asp-controller="Authentication" asp-action="Logout" class="px-3">
                                            @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger w-100">
                                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer-min py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - PRN222_BL5_Project_EmployeeManagement</span>
            <span class="text-secondary">v1.0</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
