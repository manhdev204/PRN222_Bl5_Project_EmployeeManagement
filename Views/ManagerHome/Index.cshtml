@{
    ViewData["Title"] = "Manager Dashboard";
}
<div class="container mt-4">
    <div class="row g-3">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Chấm công theo ngày</h5>
                        <div class="text-muted">Xem tình trạng nhân viên hôm nay</div>
                    </div>
                    <a class="btn btn-primary" asp-controller="ManagerAttendance" asp-action="Today">Mở</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Duyệt nghỉ phép</h5>
                        <div class="text-muted">Danh sách yêu cầu đang chờ</div>
                    </div>
                    <a class="btn btn-outline-primary" asp-controller="LeaveRequest" asp-action="ApproveList" asp-route-status="pending">Mở</a>
                </div>
            </div>
        </div>
    </div>
</div>
