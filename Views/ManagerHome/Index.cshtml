@{
    ViewData["Title"] = "Manager Dashboard";
}
<div class="container mt-4">
    <div class="row g-3">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Daily Attendance</h5>
                        <div class="text-muted">View today's employee status</div>
                    </div>
                    <a class="btn btn-primary" asp-controller="ManagerAttendance" asp-action="Today">Open</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Approve Leave</h5>
                        <div class="text-muted">List of pending requests</div>
                    </div>
                    <a class="btn btn-outline-primary" asp-controller="LeaveRequest" asp-action="ApproveList" asp-route-status="pending">Open</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Salary Management</h5>
                        <div class="text-muted">View & edit employee payroll</div>
                    </div>
                    <a class="btn btn-primary" asp-controller="ManagerSalary" asp-action="Index">Open</a>
                </div>
            </div>
        </div>
    </div>
</div>
