@model PRN222_BL5_Project_EmployeeManagement.Models.Attendance
@{
    ViewData["Title"] = "Edit Attendance";
    var accounts = ViewBag.Accounts as IEnumerable<PRN222_BL5_Project_EmployeeManagement.Models.Account>;
}
<h2>Edit Attendance</h2>
<form method="post" asp-action="Edit" asp-controller="AdminAttendance">
    <input type="hidden" name="id" value="@Model.AttendanceId" />
    <div class="mb-3">
        <label class="form-label">Account</label>
        <input class="form-control" value="@Model.Account?.Username - @Model.Account?.FullName" disabled />
    </div>
    <div class="mb-3">
        <label class="form-label">Attendance Date</label>
        <input class="form-control" type="date" name="attendanceDate" value="@Model.AttendanceDate.ToString("yyyy-MM-dd")" />
    </div>
    <div class="mb-3">
        <label class="form-label">Check In Time</label>
        <input class="form-control" type="datetime-local" name="checkInTime" value="@(Model.CheckInTime?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
    </div>
    <div class="mb-3">
        <label class="form-label">Check Out Time</label>
        <input class="form-control" type="datetime-local" name="checkOutTime" value="@(Model.CheckOutTime?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <input class="form-control" type="number" name="status" value="@Model.Status" />
    </div>
    <div class="mb-3">
        <label class="form-label">On Leave</label>
        <select class="form-select" name="onLeave">
            <option value="0" selected="@(Model.OnLeave.Equals(0))">No</option>
            <option value="1" selected="@(Model.OnLeave.Equals(1))">Yes</option>
        </select>
    </div>
    <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" name="deleteFlag" @(Model.DeleteFlag == true ? "checked" : "") />
        <label class="form-check-label">Delete Flag</label>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="AdminAttendance">Back</a>
</form>
